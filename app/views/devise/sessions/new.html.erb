<div class="navbar navbar-dark bg-dark shadow-sm">
  <div class="container">
    <%= link_to 'Drawing', root_path, class: "navbar-brand" %>
  </div>
</div>

<%= form_with model: @user, url: new_user_session_path, class:'registation-main', local: true do |f| %>

  <div class='form-wrap'>
    <div class='form-header'>
        <h3 class='form-title-text'>ユーザー情報入力</h3>
    </div>

    <div class='form-group'>
      <div class='form-content'>
        <label class="form-text">メールアドレス</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :email, class: 'form-input', id: "email", placeholder:"PC・携帯どちらでも可", maxlength: "10", autofocus: true %>
    </div>
    <div class='form-group'>
      <div class='form-content'>
        <label class="form-text">パスワード</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.password_field :password, class: 'form-input', id: "passsword", placeholder:"6文字以上の半角英数字" %>
      <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
    </div>
    <div class="form-group">
      <div class='form-content'>
        <label class="form-text">パスワード(確認)</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.password_field :password_confirmation, class:"form-input", id:"password-confirmation", placeholder:"同じパスワードを入力" %>
    </div>
    <div class='register-btn'>
      <%= f.submit "ログイン" ,class:"register-red-btn" %>
    </div>

  </div>

<% end %>